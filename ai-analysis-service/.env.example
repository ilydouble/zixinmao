# ============================
# 天远 API 配置
# ============================
TIANYUAN_APP_ID=your_app_id
TIANYUAN_APP_SECRET=your_app_secret
TIANYUAN_BASE_URL=https://api.tianyuanapi.com
TIANYUAN_API_CODE=your_api_code

# ============================
# 数据库配置
# ============================
DB_HOST=your_db_host
DB_PORT=your_db_port
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_DATABASE=your_db_name
DB_CHARSET=utf8mb4

# ============================
# 日志配置
# ============================
LOG_LEVEL=INFO             # 日志级别: DEBUG / INFO / WARNING / ERROR
LOG_DIR=logs               # 日志目录
LOG_ALGORITHM_ENABLE=True  # 是否启用算法日志
LOG_FILENAME=app.log       # 日志文件名
LOG_BACKUP_COUNT=30        # 保留的日志文件数

# ============================
# 服务配置
# ============================
APP_NAME=your_app_name
APP_VERSION=1.0.0
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=True

# ============================
# AI API 配置
# ============================
AI_API_URL=http://your_ai_api_url/v1beta/models/your-model:generateContent
AI_API_KEY=your_api_key
AI_API_TIMEOUT=600          # 超时时间（秒）

# ============================
# 队列配置
# ============================
QUEUE_MAX_CONCURRENT_TASKS=3   # 最大并发任务数
QUEUE_MAX_QUEUE_SIZE=100       # 最大排队任务数
QUEUE_TASK_TIMEOUT=600         # 单任务超时时间（秒）

# ============================
# DIFY API 配置
# ============================
DIFY_API_BASE_URL=http://your_dify_base_url
DIFY_API_KEY=your_dify_api_key
DIFY_API_TIMEOUT=900
