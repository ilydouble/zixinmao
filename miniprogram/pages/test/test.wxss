/* test.wxss */
.container {
  padding: 24rpx;
  background: #f5f7fa;
  min-height: 100vh;
}

.test-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 24rpx;
}

.test-item {
  margin-bottom: 24rpx;
}

.test-item:last-child {
  margin-bottom: 0;
}

.result-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

.result-content {
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 24rpx;
  color: #333;
  white-space: pre-wrap;
  word-break: break-all;
  min-height: 200rpx;
}
