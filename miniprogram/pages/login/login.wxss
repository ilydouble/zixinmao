/* login.wxss */
.container {
  height: 100vh;
  background: linear-gradient(135deg, #0b3a95, #1e5bb8);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 48rpx;
}

.login-content {
  width: 100%;
  max-width: 600rpx;
  text-align: center;
  color: #fff;
}

/* Logo 区域 */
.logo-section {
  margin-bottom: 80rpx;
}

.logo {
  font-size: 160rpx;
  margin-bottom: 24rpx;
  animation: float 3s ease-in-out infinite;
}

.app-name {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
  letter-spacing: 2rpx;
}

.app-desc {
  font-size: 26rpx;
  opacity: 0.9;
  line-height: 1.5;
}

/* 功能介绍 */
.features {
  margin-bottom: 100rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 28rpx;
  opacity: 0.95;
}

.feature-item:last-child {
  margin-bottom: 0;
}

.feature-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
  line-height: 1;
}

.feature-text {
  font-size: 28rpx;
  line-height: 1.5;
  white-space: nowrap;
}

/* 隐私协议勾选 */
.agreement-section {
  margin-top: 60rpx;
  margin-bottom: 40rpx;
  padding: 0 40rpx;
}

.agreement-item {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.agreement-label {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

/* 调整复选框样式 */
.agreement-label checkbox {
  flex-shrink: 0;
  transform: scale(0.9);
}

.agreement-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.95);
  line-height: 1.5;
  text-align: center;
  white-space: nowrap;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0;
}

.agreement-link {
  color: #fff;
  text-decoration: underline;
  font-weight: 500;
  padding: 0 2rpx;
  cursor: pointer;
}

/* 登录按钮 */
.login-actions {
  margin-top: 80rpx;
  padding: 0 40rpx;
}

.button-group {
  display: flex;
  gap: 16rpx;
  justify-content: center;
  align-items: center;
}

/* 返回首页按钮 */
.back-button {
  flex: 1;
  min-width: 120rpx;
  padding: 16rpx 24rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: 600;
  color: #fff;
  background: rgba(255, 255, 255, 0.15);
  border: 1.5rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 12rpx;
  transition: all 0.25s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.back-button:active {
  background: rgba(255, 255, 255, 0.22);
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

/* 微信快速登录按钮 */
.login-button {
  flex: 1.1;
  min-width: 140rpx;
  padding: 16rpx 24rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: 600;
  color: #fff;
  background: rgba(255, 255, 255, 0.15);
  border: 1.5rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 12rpx;
  transition: all 0.25s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.login-button:active {
  background: rgba(255, 255, 255, 0.22);
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

/* 禁用状态 */
.login-button[disabled],
.login-button.disabled {
  background: linear-gradient(135deg, #999999 0%, #AAAAAA 100%);
  opacity: 0.6;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.login-button[disabled]:active,
.login-button.disabled:active {
  transform: none;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 动画效果 */
@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-20rpx);
  }
}
