<!--login.wxml-->
<view class="container">
  <view class="login-content">
    <!-- Logo 区域 -->
    <view class="logo-section">
      <view class="logo">🐱</view>
      <view class="app-name">资信猫</view>
      <view class="app-desc">专业的金融数据分析平台</view>
    </view>

    <!-- 功能介绍 -->
    <view class="features">
      <view class="feature-item">
        <view class="feature-icon">📊</view>
        <view class="feature-text">银行流水智能分析</view>
      </view>
      <view class="feature-item">
        <view class="feature-icon">📋</view>
        <view class="feature-text">征信报告专业解读</view>
      </view>
      <view class="feature-item">
        <view class="feature-icon">🔒</view>
        <view class="feature-text">数据安全有保障</view>
      </view>
    </view>

    <!-- 隐私协议勾选 -->
    <view class="agreement-section">
      <view class="agreement-item">
        <checkbox-group bind:change="onAgreementChange">
          <label class="agreement-label">
            <checkbox value="agree" checked="{{agreedToPolicy}}" color="#0052D9" />
          </label>
        </checkbox-group>
        <view class="agreement-text">
          <text>我已阅读并同意</text>
          <text class="agreement-link" catchtap="onViewUserAgreement">《用户协议》</text>
          <text>和</text>
          <text class="agreement-link" catchtap="onViewPrivacyPolicy">《隐私政策》</text>
        </view>
      </view>
    </view>

    <!-- 登录按钮 -->
    <view class="login-actions">
      <view class="button-group">
        <view class="back-button" bind:tap="onBackToHome">
          返回首页
        </view>
        <view class="login-button" bind:tap="onWechatLogin">
          <text wx:if="{{!loading}}">微信快速登录</text>
          <text wx:else>登录中...</text>
        </view>
      </view>
    </view>
  </view>
</view>
