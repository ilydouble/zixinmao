/**index.wxss**/
.container {
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #0b3a95, #1e5bb8);
}

.loading-container {
  text-align: center;
  color: #fff;
}

.loading-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
  animation: bounce 1.5s infinite;
}

.loading-text {
  font-size: 32rpx;
  opacity: 0.9;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-20rpx);
  }
  60% {
    transform: translateY(-10rpx);
  }
}
