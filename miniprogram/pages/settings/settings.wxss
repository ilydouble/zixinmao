/* settings.wxss */
.container {
  background: #f5f7fa;
  min-height: 100vh;
  padding: 24rpx;
  padding-bottom: 40rpx;
}

.settings-content {
  /* 设置内容 */
}

/* 设置区域 */
.settings-section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 16rpx;
  padding-left: 8rpx;
}

/* 选择器文本 */
.picker-text {
  color: #666;
  font-size: 28rpx;
}

/* 缓存大小 */
.cache-size {
  color: #666;
  font-size: 26rpx;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 40rpx 24rpx;
  color: #999;
}

.version-text {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.copyright {
  font-size: 24rpx;
}

/* 选择器弹窗 */
.picker-popup {
  background: white;
  border-radius: 24rpx 24rpx 0 0;
  padding-bottom: env(safe-area-inset-bottom);
}

.picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid #eee;
}

.picker-cancel,
.picker-confirm {
  font-size: 32rpx;
  color: #0b3a95;
  padding: 16rpx;
}

.picker-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.picker-view {
  height: 400rpx;
}

.picker-item {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  font-size: 32rpx;
  color: #1a1a1a;
}

/* 自定义箭头样式 */
.custom-arrow {
  color: #c8c9cc;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32rpx;
  height: 32rpx;
}
