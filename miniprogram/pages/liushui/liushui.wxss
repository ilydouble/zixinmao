/* liushui.wxss */
.container {
  background: #f5f7fa;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 标签导航 */
.tabs {
  display: flex;
  background: #fff;
  margin: 24rpx;
  border-radius: 16rpx;
  padding: 8rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.tab.active {
  background: #0b3a95;
  color: #fff;
  font-weight: 600;
}

/* 上传卡片 */
.upload-card {
  margin-bottom: 24rpx;
}

.upload-area {
  text-align: center;
  padding: 40rpx;
  border: 2rpx dashed #d9d9d9;
  border-radius: 12rpx;
  background: #fafafa;
  transition: all 0.3s ease;
}

.upload-content {
  padding: 20rpx;
  cursor: pointer;
}

.upload-content:active {
  opacity: 0.8;
}

.upload-area:active {
  border-color: #0b3a95;
  background: #f6f8ff;
}

.upload-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.upload-desc {
  font-size: 24rpx;
  color: #999;
}

/* 已选择文件 */
.selected-file {
  padding: 24rpx;
  background: #f8fafc;
  border-radius: 12rpx;
  border: 2rpx solid #e2e8f0;
}

.file-info {
  display: flex;
  align-items: center;
}

.file-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.file-details {
  flex: 1;
}

.file-name {
  font-size: 28rpx;
  color: #1a1a1a;
  margin-bottom: 8rpx;
  font-weight: 600;
}

.file-size {
  font-size: 24rpx;
  color: #666;
}

.file-actions {
  margin-left: 24rpx;
}

.remove-btn {
  width: 48rpx;
  height: 48rpx;
  background: #ef4444;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

/* 进度区域 */
.progress-section {
  margin-top: 24rpx;
}

.progress-text {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
  text-align: center;
}

.cancel-section {
  margin-top: 24rpx;
  text-align: center;
}

.cancel-btn {
  background-color: #ff4d4f !important;
  border-color: #ff4d4f !important;
  color: white !important;
  min-width: 200rpx;
}

/* 操作区域 */
.action-section {
  margin-top: 32rpx;
}

/* 历史报告卡片 */
.history-card {
  margin-bottom: 24rpx;
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.date-filter {
  font-size: 26rpx;
  color: #666;
}

.filter-text {
  padding: 8rpx 16rpx;
  background: #f5f7fa;
  border-radius: 8rpx;
}

/* 报告列表 */
.report-list {
  /* 样式继承自全局 list-item */
}

.report-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s ease;
}

.report-item:last-child {
  border-bottom: none;
}

.report-item:active {
  background-color: #f8fafc;
}

/* 报告状态样式 */
.report-item.processing {
  background: linear-gradient(135deg, #fff7e6, #ffecc7);
  border: 2rpx solid #faad14;
  border-radius: 16rpx;
  margin: 8rpx 0;
  box-shadow: 0 4rpx 16rpx rgba(250, 173, 20, 0.15);
}

.report-item.failed {
  background: linear-gradient(135deg, #fff2f0, #ffebe8);
  border: 2rpx solid #ff4d4f;
  border-radius: 16rpx;
  margin: 8rpx 0;
  box-shadow: 0 4rpx 16rpx rgba(255, 77, 79, 0.15);
  transform: scale(1.02);
  animation: pulse 2s infinite;
}

.report-status {
  font-size: 24rpx;
  margin-top: 8rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  display: inline-block;
  font-weight: 500;
}

.report-status.processing {
  background: linear-gradient(135deg, #faad14, #d48806);
  color: white;
  box-shadow: 0 2rpx 8rpx rgba(250, 173, 20, 0.3);
}

.report-status.failed {
  background: linear-gradient(135deg, #ff4d4f, #cf1322);
  color: white;
  box-shadow: 0 2rpx 8rpx rgba(255, 77, 79, 0.3);
  animation: shake 0.5s ease-in-out;
}

.report-status.completed {
  background: linear-gradient(135deg, #52c41a, #389e0d);
  color: white;
  box-shadow: 0 2rpx 8rpx rgba(82, 196, 26, 0.3);
}

/* 脉冲动画 */
@keyframes pulse {
  0% {
    transform: scale(1.02);
  }
  50% {
    transform: scale(1.04);
  }
  100% {
    transform: scale(1.02);
  }
}

/* 震动动画 */
@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-2rpx); }
  75% { transform: translateX(2rpx); }
}

.report-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 24rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.report-info {
  flex: 1;
}

.report-title {
  font-size: 28rpx;
  color: #1a1a1a;
  margin-bottom: 8rpx;
  font-weight: 600;
}

.report-date {
  font-size: 24rpx;
  color: #666;
}

.report-actions {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 80rpx;
}

.report-arrow {
  color: #ccc;
  font-size: 24rpx;
}

.action-btn {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
  text-align: center;
  min-width: 60rpx;
}

.cancel-action {
  background-color: #ff4d4f;
  color: white;
  border: 1rpx solid #ff4d4f;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}
