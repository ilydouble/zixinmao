/* support.wxss */
.container {
  background: #f5f7fa;
  min-height: 100vh;
  padding: 24rpx;
  padding-bottom: 40rpx;
}

/* 通用标题 */
.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 16rpx;
}

.section-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 24rpx;
}

/* 二维码区域 */
.qr-section {
  margin-bottom: 32rpx;
}

.qr-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

.qr-image {
  width: 360rpx;
  height: 360rpx;
  border-radius: 16rpx;
  background: #f8fafc;
  margin-bottom: 24rpx;
}

.qr-note {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 24rpx;
  line-height: 1.4;
}

/* 联系方式区域 */
.contact-section {
  margin-bottom: 32rpx;
}

/* 常见问题 */
.faq-section {
  margin-bottom: 32rpx;
}

.faq-list {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

.faq-item {
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.faq-item:last-child {
  border-bottom: none;
}

.faq-question {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 16rpx;
}

.faq-answer {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 服务时间 */
.service-time {
  background: #f0f9ff;
  border: 2rpx solid #bae6fd;
  border-radius: 16rpx;
  padding: 32rpx;
}

.time-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #0369a1;
  margin-bottom: 24rpx;
}

.time-content {
  /* 内容样式 */
}

.time-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
  font-size: 26rpx;
}

.time-item:last-child {
  margin-bottom: 0;
}

.time-label {
  color: #0369a1;
}

.time-value {
  color: #0369a1;
  font-weight: 600;
}
