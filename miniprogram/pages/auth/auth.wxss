/* auth.wxss */
.container {
  min-height: 100vh;
  background: #f5f7fa;
  padding: 24rpx;
}

.auth-content {
  max-width: 600rpx;
  margin: 0 auto;
}

/* 头部说明 */
.auth-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.auth-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.auth-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 16rpx;
}

.auth-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  padding: 0 24rpx;
}

/* 认证表单 */
.auth-form {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

.form-item {
  margin-bottom: 32rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  color: #1a1a1a;
  margin-bottom: 16rpx;
  font-weight: 600;
}

.form-input {
  width: 100%;
  height: 88rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  background: #fff;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #0b3a95;
}

/* 协议勾选 */
.agreement-section {
  margin-bottom: 48rpx;
  padding: 0 32rpx;
  display: flex;
  justify-content: center;
}

.agreement-item {
  display: flex;
  justify-content: center;
  width: 100%;
}

.agreement-label {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  gap: 0;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 调整复选框样式 */
.agreement-label checkbox {
  flex-shrink: 0;
  transform: scale(0.6);
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  margin-right: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
  border: 2rpx solid #e5e7eb;
}

.checkbox-spacer {
  width: 10rpx;
  flex-shrink: 0;
}

.agreement-link {
  color: #0b3a95;
  font-weight: 600;
  padding: 0 2rpx;
  cursor: pointer;
}

/* 提交按钮 */
.submit-section {
  margin-bottom: 48rpx;
}

/* 安全提示 */
.security-tips {
  background: #f0f9ff;
  border: 2rpx solid #bae6fd;
  border-radius: 12rpx;
  padding: 24rpx;
}

.tips-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #0369a1;
  margin-bottom: 16rpx;
}

.tips-content {
  font-size: 24rpx;
  color: #0369a1;
  line-height: 1.6;
}

/* 复选框样式调整 */
checkbox {
  transform: scale(0.8);
}

checkbox .wx-checkbox-input {
  border-radius: 6rpx;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background-color: #0b3a95;
  border-color: #0b3a95;
}
