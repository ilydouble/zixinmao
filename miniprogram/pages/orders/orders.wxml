    <view wx:if="{{orders.length > 0}}" class="orders-list">
      <view 
        wx:for="{{orders}}" 
        wx:key="id"
        class="order-item"
        data-order="{{item}}"
        bind:tap="onViewOrder"
      >
        <view class="order-header">
          <view class="order-title">{{item.title}}</view>
          <view class="order-status success">{{item.status}}</view>
        </view>
        <view class="order-info">
          <view class="order-date">{{item.date}}</view>
          <view class="order-amount">{{item.amount}}</view>
        </view>
      </view>
    </view>

