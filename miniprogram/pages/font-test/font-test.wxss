/* font-test.wxss */
.container {
  padding: 32rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.test-section {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 32rpx;
  text-align: center;
}

.section-subtitle {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.status-card {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
}

.status-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.status-item:last-child {
  margin-bottom: 0;
}

.status-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 16rpx;
  min-width: 160rpx;
}

.status-value {
  font-size: 28rpx;
  font-weight: 600;
}

.status-value.success {
  color: #52c41a;
}

.status-value.error {
  color: #ff4d4f;
}

.status-message {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.action-section {
  margin-bottom: 48rpx;
  text-align: center;
}

.icon-test-section {
  margin-bottom: 32rpx;
}

.icon-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
  margin-top: 24rpx;
}

.icon-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #e8e8e8;
}

.icon-item t-icon {
  margin-bottom: 12rpx;
  color: #1890ff;
}

.icon-name {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

.description {
  background: #fff7e6;
  border: 2rpx solid #ffd591;
  border-radius: 12rpx;
  padding: 24rpx;
}

.desc-text {
  font-size: 26rpx;
  color: #d46b08;
  line-height: 1.5;
}
