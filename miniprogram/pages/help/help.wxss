/* 常见问题 */
.faq-section {
  margin-bottom: 32rpx;
}

.faq-list {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

.faq-item {
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s ease;
}

.faq-item:last-child {
  border-bottom: none;
}

.faq-item:active {
  background-color: #f8fafc;
}

.faq-question {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
}

.question-text {
  flex: 1;
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-right: 16rpx;
}

.expand-icon {
  color: #666;
  font-size: 20rpx;
  transition: transform 0.2s ease;
}

.faq-item.expanded .expand-icon {
  transform: rotate(180deg);
}

.faq-answer {
  padding: 0 32rpx 32rpx;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 使用指南 */
.guide-section {
  margin-bottom: 32rpx;
}

.guide-steps {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

.step-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 32rpx;
}

.step-item:last-child {
  margin-bottom: 0;
}

.step-number {
  width: 48rpx;
  height: 48rpx;
  background: #0b3a95;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 700;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.step-content {
  flex: 1;
  padding-top: 8rpx;
}

.step-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.step-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

