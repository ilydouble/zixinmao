/* home.wxss */
.container {
  background: #f5f7fa;
  padding-bottom: 120rpx; /* 为底部导航栏留出空间 */
}

/* 顶部导航 */
.header {
  background: #0b3a95;
  padding: 20rpx 24rpx;
  color: #fff;
}

.header-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.logo-area {
  display: flex;
  align-items: center;
}

.logo {
  font-size: 48rpx;
  margin-right: 16rpx;
}

.app-name {
  font-size: 36rpx;
  font-weight: 700;
}

/* Banner 轮播 */
.banner-section {
  margin: 24rpx;
}

.banner-swiper {
  height: 300rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.banner-item {
  height: 300rpx;
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
}

.banner-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

/* 功能模块 */
.function-section {
  margin: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 24rpx;
}

.function-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
}

.function-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx 16rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
  transition: transform 0.2s ease;
}

.function-item:active {
  transform: scale(0.95);
}

.function-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.function-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.function-desc {
  font-size: 24rpx;
  color: #666;
}

/* 产品服务 */
.product-section {
  margin: 24rpx;
  margin-bottom: 120rpx; /* 为底部导航留空间 */
}

.product-banner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding: 32rpx;
  border-radius: 16rpx;
  color: #fff;
  position: relative;
  overflow: hidden;
  transition: transform 0.2s ease;
}

.product-banner:active {
  transform: scale(0.98);
}

.product-banner.blue {
  background: linear-gradient(135deg, #3b82f6, #60a5fa);
}

.product-banner.red {
  background: linear-gradient(135deg, #ef4444, #f97316);
}

.product-banner.purple {
  background: linear-gradient(135deg, #7c3aed, #a78bfa);
}

.product-banner-content {
  flex: 1;
}

.product-banner-title {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.product-banner-desc {
  font-size: 24rpx;
  opacity: 0.9;
  line-height: 1.4;
}

.product-banner-icon {
  font-size: 60rpx;
  margin-left: 24rpx;
}

.product-banner-badge {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  backdrop-filter: blur(10rpx);
}
