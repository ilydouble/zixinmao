/* center.wxss */
.container {
  background: #f5f7fa;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 用户信息区域 */
.user-section {
  background: linear-gradient(135deg, #0b3a95, #1e5bb8);
  padding: 60rpx 32rpx 40rpx;
  color: #fff;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.avatar-wrapper {
  padding: 0;
  background: none;
  border: none;
  border-radius: 50%;
  overflow: hidden;
}

.user-details {
  flex: 1;
}

.user-name {
  margin-bottom: 12rpx;
}

.nickname-input {
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 8rpx;
  padding: 12rpx 16rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
}

.nickname-input::placeholder {
  color: rgba(255, 255, 255, 0.7);
}

.nickname-text {
  font-size: 32rpx;
  font-weight: 600;
}

/* 组织和城市信息 */
.user-location-info {
  margin: 16rpx 0 12rpx 0;
}

.location-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  align-items: center;
  margin-top: 4rpx;
}

.location-tag {
  display: flex;
  align-items: center;
  gap: 6rpx;
  background: rgba(255, 255, 255, 0.15);
  padding: 8rpx 14rpx;
  border-radius: 18rpx;
  font-size: 22rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  max-width: 280rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.tag-icon {
  font-size: 18rpx;
  opacity: 0.9;
  flex-shrink: 0;
}

.tag-text {
  color: rgba(255, 255, 255, 0.95);
  font-weight: 500;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 200rpx;
}

.organization-tag {
  background: rgba(59, 130, 246, 0.2);
  border-color: rgba(59, 130, 246, 0.3);
}

.city-tag {
  background: rgba(16, 185, 129, 0.2);
  border-color: rgba(16, 185, 129, 0.3);
}

/* 部分信息设置状态 */
.partial-location-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.location-prompt {
  margin-top: 4rpx;
}

/* 无信息设置状态 */
.no-location-info {
  margin: 8rpx 0;
}

/* 设置提示样式 */
.info-placeholder {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.7);
  padding: 6rpx 12rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  border: 1rpx dashed rgba(255, 255, 255, 0.3);
  display: inline-block;
  transition: all 0.3s ease;
}

.info-placeholder:active {
  background: rgba(255, 255, 255, 0.2);
  transform: scale(0.98);
}

.user-status {
  font-size: 26rpx;
  opacity: 0.9;
}

.verified {
  color: #4ade80;
}

.unverified {
  color: #fbbf24;
}

/* 未登录状态 */
.login-prompt {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.prompt-text {
  flex: 1;
}

.prompt-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

/* 快捷统计 */
.stats-section {
  margin: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 32rpx;
}

.stat-item {
  text-align: center;
  transition: transform 0.2s ease;
}

.stat-item:active {
  transform: scale(0.95);
}

.stat-number {
  font-size: 36rpx;
  font-weight: 700;
  color: #0b3a95;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 功能菜单 */
.menu-section {
  margin: 24rpx;
}

.menu-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #666;
  margin-bottom: 16rpx;
  padding-left: 8rpx;
}



/* 退出登录 */
.logout-section {
  margin: 40rpx 24rpx 24rpx;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 40rpx 24rpx;
  color: #999;
}

.app-info {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.app-name {
  font-size: 28rpx;
  font-weight: 600;
}

.version {
  font-size: 24rpx;
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.copyright {
  font-size: 22rpx;
}

/* 会员信息卡片 */
.membership-section {
  margin: 32rpx 40rpx;
}

.membership-card {
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  color: white;
  position: relative;
  overflow: hidden;
}

.membership-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  pointer-events: none;
}

.membership-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
  position: relative;
  z-index: 1;
}

.membership-badge {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.membership-icon {
  font-size: 48rpx;
}

.membership-name {
  font-size: 36rpx;
  font-weight: 600;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.membership-expiry {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 4rpx;
}

.expiry-label {
  font-size: 22rpx;
  opacity: 0.9;
}

.expiry-date {
  font-size: 26rpx;
  font-weight: 600;
}

.membership-desc {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 24rpx;
  position: relative;
  z-index: 1;
}

.membership-actions {
  display: flex;
  gap: 16rpx;
  position: relative;
  z-index: 1;
}

/* 会员权益 */
.membership-features {
  margin-top: 24rpx;
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
}

.features-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 16rpx;
}

.features-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.feature-item:last-child {
  border-bottom: none;
}

.feature-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
}

/* 自定义箭头样式 */
.custom-arrow {
  color: #c8c9cc;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32rpx;
  height: 32rpx;
}
