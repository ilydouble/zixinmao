/* privacyPolicy.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding: 32rpx;
}

.agreement-content {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
}

.agreement-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
  text-align: center;
  margin-bottom: 48rpx;
}

.content-section {
  margin-bottom: 48rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #0b3a95;
  margin-bottom: 24rpx;
  padding: 16rpx 20rpx;
  background: linear-gradient(135deg, rgba(11, 58, 149, 0.08), rgba(30, 91, 184, 0.08));
  border-radius: 8rpx;
  border-left: 4rpx solid #0b3a95;
  position: relative;
}

.section-content {
  padding: 0 8rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

.content-text {
  color: #666;
  margin-bottom: 16rpx;
  display: block;
  word-wrap: break-word;
  overflow-wrap: break-word;
}

.content-text text {
  display: inline;
  word-break: break-all;
}

.content-text:last-child {
  margin-bottom: 0;
}

