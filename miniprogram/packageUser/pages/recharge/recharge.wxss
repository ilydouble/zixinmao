/* recharge.wxss */
.container {
  background: #f5f7fa;
  min-height: 100vh;
  padding: 24rpx;
  padding-bottom: 40rpx;
}

.recharge-content {
  /* 充值内容 */
}

/* 通用标题 */
.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 24rpx;
}

/* 会员类型区域 */
.membership-section {
  margin-bottom: 32rpx;
}

.membership-types {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.membership-type-card {
  background: #fff;
  border: 3rpx solid #e5e7eb;
  border-radius: 16rpx;
  overflow: hidden;
  transition: all 0.3s ease;
}

.membership-type-card.selected {
  border-width: 3rpx;
  box-shadow: 0 4rpx 16rpx rgba(11, 58, 149, 0.15);
}

.type-header {
  padding: 24rpx;
  color: white;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.type-icon {
  font-size: 36rpx;
}

.type-name {
  font-size: 32rpx;
  font-weight: 600;
}

.type-desc {
  padding: 16rpx 24rpx;
  font-size: 24rpx;
  color: #666;
}

.type-features {
  padding: 0 24rpx 24rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.feature-item-small {
  font-size: 22rpx;
  color: #333;
  line-height: 1.6;
}

.feature-text-small {
  display: block;
}

/* 时长选择区域 */
.duration-section {
  margin-bottom: 32rpx;
}

.duration-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.duration-item {
  background: #fff;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  padding: 24rpx 16rpx;
  text-align: center;
  position: relative;
  transition: all 0.3s ease;
}

.duration-item.selected {
  border-color: #0b3a95;
  background: #f6f8ff;
}

.duration-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: #ef4444;
  color: #fff;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 600;
}

.duration-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.duration-price {
  font-size: 32rpx;
  font-weight: 700;
  color: #0b3a95;
}



/* 支付方式 */
.payment-section {
  margin-bottom: 32rpx;
}

.payment-methods {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

.payment-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.payment-item:last-child {
  border-bottom: none;
}

.payment-item.selected {
  background: #f6f8ff;
}

.payment-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.payment-name {
  flex: 1;
  font-size: 28rpx;
  color: #1a1a1a;
}

.payment-check {
  color: #0b3a95;
  font-size: 24rpx;
  font-weight: 700;
}

/* 支付按钮 */
.pay-section {
  margin-bottom: 32rpx;
}

.pay-info {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.pay-label {
  font-size: 28rpx;
  color: #666;
}

.pay-amount {
  font-size: 40rpx;
  font-weight: 700;
  color: #ef4444;
}

/* 服务说明 */
.service-note {
  background: #f0fdf4;
  border: 2rpx solid #bbf7d0;
  border-radius: 16rpx;
  padding: 24rpx;
}

.note-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #166534;
  margin-bottom: 16rpx;
}

.note-content {
  font-size: 24rpx;
  color: #166534;
  line-height: 1.6;
}
