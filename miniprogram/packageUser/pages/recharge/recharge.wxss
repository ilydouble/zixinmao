/* recharge.wxss */
.container {
  background: #f5f7fa;
  min-height: 100vh;
  padding: 24rpx;
  padding-bottom: 40rpx;
}

.recharge-content {
  /* 充值内容 */
}

/* 通用标题 */
.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 24rpx;
}

/* 充值金额区域 */
.amounts-section {
  margin-bottom: 32rpx;
}

.amounts-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.amount-item {
  background: #fff;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  position: relative;
  transition: all 0.3s ease;
}

.amount-item.selected {
  border-color: #0b3a95;
  background: #f6f8ff;
}

.popular-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: #ef4444;
  color: #fff;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 600;
}

.amount-price {
  font-size: 40rpx;
  font-weight: 700;
  color: #0b3a95;
  margin-bottom: 12rpx;
}

.amount-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 自定义金额区域 */
.custom-amount-section {
  margin-bottom: 32rpx;
}

.custom-input-wrapper {
  background: #fff;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.currency-symbol {
  font-size: 32rpx;
  font-weight: 600;
  color: #0b3a95;
  margin-right: 12rpx;
}

.custom-amount-input {
  flex: 1;
  font-size: 32rpx;
  color: #1a1a1a;
  border: none;
  outline: none;
}

.amount-tips {
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

/* 支付方式 */
.payment-section {
  margin-bottom: 32rpx;
}

.payment-methods {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

.payment-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.payment-item:last-child {
  border-bottom: none;
}

.payment-item.selected {
  background: #f6f8ff;
}

.payment-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.payment-name {
  flex: 1;
  font-size: 28rpx;
  color: #1a1a1a;
}

.payment-check {
  color: #0b3a95;
  font-size: 24rpx;
  font-weight: 700;
}

/* 支付按钮 */
.pay-section {
  margin-bottom: 32rpx;
}

/* 服务说明 */
.service-note {
  background: #f0fdf4;
  border: 2rpx solid #bbf7d0;
  border-radius: 16rpx;
  padding: 24rpx;
}

.note-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #166534;
  margin-bottom: 16rpx;
}

.note-content {
  font-size: 24rpx;
  color: #166534;
  line-height: 1.6;
}
