<!--recharge.wxml-->
<view class="container">
  <view class="recharge-content">
    <!-- 充值金额选择 -->
    <view class="amounts-section">
      <view class="section-title">选择充值金额</view>
      <view class="amounts-grid">
        <view
          wx:for="{{rechargeAmounts}}"
          wx:key="id"
          class="amount-item {{selectedAmount === item.id ? 'selected' : ''}}"
          data-amount-id="{{item.id}}"
          bind:tap="onSelectAmount">
          <view wx:if="{{item.popular}}" class="popular-badge">推荐</view>
          <view class="amount-price">{{item.title}}</view>
          <view class="amount-desc">{{item.desc}}</view>
        </view>
      </view>
    </view>

    <!-- 自定义金额 -->
    <view class="custom-amount-section">
      <view class="section-title">自定义金额</view>
      <view class="custom-input-wrapper">
        <text class="currency-symbol">¥</text>
        <input
          class="custom-amount-input"
          type="digit"
          placeholder="请输入充值金额"
          value="{{customAmount}}"
          bind:input="onCustomAmountInput"
        />
      </view>
      <view class="amount-tips">最低充值1元，最高单次充值10000元</view>
    </view>

    <!-- 支付方式 -->
    <view class="payment-section">
      <view class="section-title">支付方式</view>
      <view class="payment-methods">
        <view class="payment-item selected">
          <view class="payment-icon">💳</view>
          <view class="payment-name">微信支付</view>
          <view class="payment-check">✓</view>
        </view>
      </view>
    </view>

    <!-- 支付按钮 -->
    <view class="pay-section">
      <t-button
        theme="primary"
        size="large"
        block
        bind:tap="onPay"
      >
        立即充值
      </t-button>
    </view>

    <!-- 充值说明 -->
    <view class="service-note">
      <view class="note-title">💡 充值说明</view>
      <view class="note-content">
        • 充值金额将立即到账，可用于查询服务<br/>
        • 支持微信支付，安全便捷<br/>
        • 如有问题请联系客服
      </view>
    </view>
  </view>
</view>
