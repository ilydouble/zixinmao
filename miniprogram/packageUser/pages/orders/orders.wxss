/* orders.wxss */
.container {
  min-height: 100vh;
  background: #f5f7fa;
}

/* 订单内容 */
.orders-content {
  padding: 0;
}

.orders-list {
  background: white;
}

.order-item {
  border-bottom: 1rpx solid #f0f0f0;
  padding: 32rpx 32rpx;
  transition: background-color 0.2s ease;
}

.order-item:active {
  background-color: #f8f9fa;
}

.order-item:last-child {
  border-bottom: none;
}

.order-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-left {
  flex: 1;
}

.order-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.order-date {
  font-size: 26rpx;
  color: #999;
}

.order-right {
  text-align: right;
  flex-shrink: 0;
}

.order-amount {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.order-status {
  font-size: 24rpx;
  font-weight: 500;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  color: white;
  display: inline-block;
}

.status-pending {
  background: #fa8c16;
}

.status-processing {
  background: #1890ff;
}

.status-completed {
  background: #52c41a;
}

.status-failed {
  background: #ff4d4f;
}

.status-cancelled {
  background: #999;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 80rpx 40rpx;
  background: white;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 160rpx 40rpx;
  background: white;
}

.empty-text {
  font-size: 30rpx;
  color: #999;
}

/* 加载更多提示 */
.load-more-tip {
  text-align: center;
  padding: 40rpx;
  font-size: 26rpx;
  color: #999;
  background: #f5f7fa;
}
