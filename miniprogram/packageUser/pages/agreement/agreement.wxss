/* agreement.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding: 32rpx;
}

.agreement-content {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
}

.agreement-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
  text-align: center;
  margin-bottom: 16rpx;
}

.update-time {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-bottom: 48rpx;
}

.content-section {
  margin-bottom: 48rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid #0b3a95;
}

.section-content {
  line-height: 1.8;
}

.content-text {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 24rpx;
  text-align: justify;
}

