/**app.wxss**/
@import './miniprogram_npm/tdesign-miniprogram/common/style/index.wxss';

/* 全局样式 */
page {
  background-color: #f5f7fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

/* 容器样式 */
.container {
  padding: 0;
  background-color: #f5f7fa;
}

/* 卡片样式 */
.card {
  background: #fff;
  border-radius: 16rpx;
  margin: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 24rpx;
}
/* 列表样式 */
.list-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 24rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.list-item-content {
  flex: 1;
}

.list-item-title {
  font-size: 28rpx;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.list-item-desc {
  font-size: 24rpx;
  color: #999;
}

.list-item-arrow {
  color: #ccc;
  font-size: 24rpx;
}

/* 按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #0b3a95, #1e5bb8);
  color: #fff;
  border-radius: 12rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  border: none;
}

.btn-secondary {
  background: #f5f7fa;
  color: #0b3a95;
  border: 2rpx solid #0b3a95;
  border-radius: 12rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  background: #f0f0f0;
  color: #666;
}

.tag.success {
  background: #e8f5e8;
  color: #52c41a;
}

.tag.warning {
  background: #fff7e6;
  color: #fa8c16;
}

.tag.error {
  background: #fff2f0;
  color: #ff4d4f;
}

/* 进度条样式 */
.progress-container {
  margin: 24rpx 0;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #0b3a95, #1e5bb8);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
  text-align: center;
}

/* 上传区域样式 */
.upload-area {
  border: 2rpx dashed #d9d9d9;
  border-radius: 12rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  background: #fafafa;
  margin: 24rpx 0;
}

.upload-area.active {
  border-color: #0b3a95;
  background: #f6f8ff;
}

.upload-icon {
  font-size: 80rpx;
  color: #d9d9d9;
  margin-bottom: 16rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.upload-desc {
  font-size: 24rpx;
  color: #999;
}

/* Hero 样式 */
.hero {
  margin: 24rpx;
  padding: 36rpx;
  border-radius: 16rpx;
  color: #fff;
  background: linear-gradient(135deg, #0b3a95, #1e5bb8);
}

.hero-title {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
}

.hero-desc {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 产品横幅样式 */
.product-banner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 24rpx;
  padding: 32rpx;
  border-radius: 16rpx;
  color: #fff;
  position: relative;
  overflow: hidden;
}

.product-banner.blue {
  background: linear-gradient(135deg, #3b82f6, #60a5fa);
}

.product-banner.red {
  background: linear-gradient(135deg, #ef4444, #f97316);
}

.product-banner.purple {
  background: linear-gradient(135deg, #7c3aed, #a78bfa);
}

.product-banner-content {
  flex: 1;
}

.product-banner-title {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.product-banner-desc {
  font-size: 24rpx;
  opacity: 0.9;
}

.product-banner-icon {
  font-size: 60rpx;
  margin-left: 24rpx;
}

.product-banner-badge {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
}

/* 工具类 */
.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}

.flex {
  display: flex;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-1 {
  flex: 1;
}

.mt-16 {
  margin-top: 16rpx;
}

.mt-24 {
  margin-top: 24rpx;
}

.mb-16 {
  margin-bottom: 16rpx;
}

.mb-24 {
  margin-bottom: 24rpx;
}

.ml-16 {
  margin-left: 16rpx;
}

.mr-16 {
  margin-right: 16rpx;
}

.p-16 {
  padding: 16rpx;
}

.p-24 {
  padding: 24rpx;
}


/* 顶部安全区占位，适配 iOS 刘海屏等设备 */
.status-bar-spacer {
  height: constant(safe-area-inset-top);
  height: env(safe-area-inset-top);
  width: 100%;
}

/* 不同页面的头部背景 */
.header-bg {
  background: #0b3a95;
}
.user-section-bg {
  background: linear-gradient(135deg, #0b3a95, #1e5bb8);
}
