/* jianxin.wxss */
@import "../liushui/liushui.wxss";

/* 认证提示 */
.auth-notice {
  margin: 24rpx;
  background: #fff7ed;
  border: 2rpx solid #fed7aa;
  border-radius: 16rpx;
  padding: 24rpx;
}

/* 会员提示 */
.membership-notice {
  margin: 24rpx;
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border: 2rpx solid #fbbf24;
  border-radius: 16rpx;
  padding: 24rpx;
}

.notice-content {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.notice-icon {
  font-size: 48rpx;
}

.notice-text {
  flex: 1;
}

.notice-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #9a3412;
  margin-bottom: 8rpx;
}

.notice-desc {
  font-size: 24rpx;
  color: #9a3412;
  opacity: 0.8;
}

/* 简信宝功能介绍 */
.feature-intro {
  margin: 24rpx;
  background: linear-gradient(135deg, #1890ff, #40a9ff);
  border-radius: 16rpx;
  padding: 32rpx;
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(24, 144, 255, 0.3);
}

.intro-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.intro-desc {
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 24rpx;
  line-height: 1.5;
}

.intro-features {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.feature-tag {
  background: rgba(255, 255, 255, 0.2);
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

/* 简信宝特有的醒目状态样式 */
.report-item {
  position: relative;
}

/* 失败状态的醒目红色标签 */
.failed-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: linear-gradient(135deg, #ff4d4f, #cf1322);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(255, 77, 79, 0.4);
  z-index: 10;
  animation: pulse 2s infinite;
}

.failed-text {
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

/* 处理中状态的进度标签 */
.processing-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: linear-gradient(135deg, #faad14, #d48806);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(250, 173, 20, 0.4);
  z-index: 10;
}

.processing-text {
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

/* 失败报告的整体样式更醒目 */
.report-item.failed {
  background: linear-gradient(135deg, #fff2f0, #ffebe8);
  border: 2rpx solid #ff4d4f;
  border-radius: 16rpx;
  margin: 8rpx 0;
  box-shadow: 0 4rpx 16rpx rgba(255, 77, 79, 0.15);
  transform: scale(1.02);
}

/* 处理中报告的样式 */
.report-item.processing {
  background: linear-gradient(135deg, #fff7e6, #ffecc7);
  border: 2rpx solid #faad14;
  border-radius: 16rpx;
  margin: 8rpx 0;
  box-shadow: 0 4rpx 16rpx rgba(250, 173, 20, 0.15);
}

/* 脉冲动画 */
@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
  100% {
    transform: scale(1);
  }
}

/* 滑动删除样式 */
.report-item-wrapper {
  position: relative;
  margin-bottom: 16rpx;
  overflow: hidden;
  height: auto;
}

.report-item-container {
  position: relative;
  width: 100%;
  transition: transform 0.3s ease;
  background: white;
  border-radius: 12rpx;
}

.report-item-container .report-item {
  width: 100%;
  background: white;
  z-index: 2;
}

/* 删除按钮 */
.delete-btn {
  position: absolute;
  right: 0;
  top: 0;
  height: 100%;
  width: 160rpx;
  background: linear-gradient(135deg, #ff4d4f, #cf1322);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  border-radius: 0 12rpx 12rpx 0;
  box-shadow: -4rpx 0 8rpx rgba(0, 0, 0, 0.1);
}

.delete-icon {
  font-size: 48rpx;
}

.delete-text {
  font-size: 24rpx;
  color: white;
  font-weight: 500;
}

/* 滑动效果 */
.report-item-wrapper.swiping .report-item-container {
  transform: translateX(-160rpx);
}

/* 统一的分析卡片 */
.unified-analysis-card {
  margin: 24rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fb 100%);
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(24, 144, 255, 0.1);
}

/* 客户群体信息表单样式 */
.customer-form-card {
  margin: 24rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fb 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(24, 144, 255, 0.1);
}

/* 分区分隔符 */
.section-divider {
  display: flex;
  align-items: center;
  margin: 32rpx 0 24rpx 0;
  padding-top: 24rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.06);
}

.section-divider.compact {
  margin: 16rpx 0 12rpx 0;
  padding-top: 12rpx;
}

.section-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #1a1a1a;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

/* 信息卡片 */
.info-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 12rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid #e0e6ed;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  gap: 0;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #e0e6ed;
  min-height: 28rpx;
}

.card-header .card-title-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 28rpx;
  height: 28rpx;
  flex-shrink: 0;
  line-height: 1;
}

.card-header .card-title-text {
  flex: 1;
  display: flex;
  align-items: center;
}

.card-header .card-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin: 0;
  line-height: 1;
}

.card-section {
  margin-top: 16rpx;
}

.card-section-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.divider-line {
  height: 1rpx;
  background: #e0e6ed;
  margin: 16rpx 0;
}

.section-label-only {
  font-size: 26rpx;
  font-weight: 600;
  color: #1a1a1a;
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 16rpx;
  margin-left: 0;
  padding: 12rpx 16rpx;
  background: linear-gradient(135deg, #f8f9fb 0%, #f5f7fa 100%);
  border-radius: 12rpx;
  border: 1rpx solid #e0e6ed;
}

/* 卡片头部 */
.card-header-section {
  display: flex;
  align-items: flex-start;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
}

.card-header-section.compact {
  margin-bottom: 20rpx;
  padding-bottom: 12rpx;
}

.card-title-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: auto;
  height: auto;
  background: transparent;
  border-radius: 0;
}

.card-title-text {
  flex: 1;
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 8rpx;
  letter-spacing: 0.5rpx;
}

.card-subtitle {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
}

/* 表单组 */
.form-group {
  margin-bottom: 28rpx;
}

.form-group.compact {
  margin-bottom: 14rpx;
  margin-left: 0;
  padding: 0;
  background: transparent;
  border: none;
}

/* 表单行 - 标签和输入框在一行 */
.form-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  gap: 12rpx;
}

.form-row.compact {
  margin-bottom: 20rpx;
  gap: 16rpx;
}

.form-label-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 14rpx;
}

.form-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  display: flex;
  align-items: center;
}

.form-label.compact {
  font-size: 26rpx;
  font-weight: 600;
  margin-bottom: 0;
  white-space: nowrap;
  flex-shrink: 0;
  width: 100rpx;
}

.form-hint {
  font-size: 22rpx;
  color: #999;
  background: #f0f2f5;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.required {
  color: #ff4d4f;
  margin-left: 4rpx;
  font-weight: 700;
}

/* 客户类型勾选框组 */
.customer-type-checkbox-group {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 20rpx;
  padding: 12rpx 0;
  flex-wrap: wrap;
}

.checkbox-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  white-space: nowrap;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  gap: 8rpx;
  height: 28rpx;
}

.checkbox-label-icon {
  font-size: 26rpx;
  display: flex;
  align-items: center;
  width: 26rpx;
  height: 26rpx;
  justify-content: center;
}

.checkbox-label-text {
  display: flex;
  align-items: center;
}

.checkbox-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  cursor: pointer;
  flex: 1;
  justify-content: flex-start;
}

.checkbox {
  width: 24rpx;
  height: 24rpx;
  border: 2rpx solid #d9d9d9;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14rpx;
  color: #fff;
  transition: all 0.3s ease;
  flex-shrink: 0;
  background: #fff;
}

.checkbox.checked {
  background: #1890ff;
  border-color: #1890ff;
  font-size: 16rpx;
}

.checkbox-text {
  font-size: 26rpx;
  color: #333;
  white-space: nowrap;
}

/* 旧的客户类型选择器 - 保留以防需要 */
.customer-type-selector {
  display: flex;
  gap: 16rpx;
  margin-top: 12rpx;
}

.customer-type-selector.compact {
  gap: 12rpx;
  margin-top: 0;
  margin-bottom: 24rpx;
}

.type-card {
  flex: 1;
  background: #fff;
  border: 2rpx solid #e0e6ed;
  border-radius: 16rpx;
  padding: 20rpx;
  text-align: center;
  transition: all 0.3s ease;
  cursor: pointer;
}

.type-card.compact {
  padding: 12rpx;
}

.type-card:active {
  transform: scale(0.98);
}

.type-card.active {
  background: linear-gradient(135deg, #e6f7ff 0%, #f0f5ff 100%);
  border-color: #1890ff;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.15);
}

.type-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
  display: block;
}

.type-card.compact .type-icon {
  font-size: 32rpx;
  margin-bottom: 4rpx;
}

.type-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 4rpx;
}

.type-card.compact .type-name {
  font-size: 22rpx;
  margin-bottom: 0;
}

.type-desc {
  font-size: 22rpx;
  color: #999;
}

/* 开关容器 */
.switch-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #f8f9fb;
  border: 1rpx solid #e0e6ed;
  border-radius: 14rpx;
  padding: 18rpx 20rpx;
  transition: all 0.3s ease;
}

.switch-container.compact {
  padding: 0;
  background: transparent;
  border: none;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
  margin-bottom: 20rpx;
  height: 28rpx;
}

.switch-label {
  flex: 1;
}

.switch-label.compact {
  margin-bottom: 0;
  display: flex;
  align-items: center;
  gap: 8rpx;
  height: 28rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
}

.switch-icon {
  font-size: 26rpx;
  display: flex;
  align-items: center;
  width: 26rpx;
  height: 26rpx;
  justify-content: center;
  flex-shrink: 0;
}

.switch-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  display: flex;
  align-items: center;
  margin: 0;
  line-height: 1;
}

.switch-container.compact .switch-text {
  font-size: 26rpx;
  font-weight: 600;
  margin: 0;
  line-height: 1;
}

.switch-desc {
  font-size: 22rpx;
  color: #999;
}

.custom-switch {
  margin-left: 16rpx;
  transform: scale(0.8);
  transform-origin: right center;
}

/* 单选框组 */
.radio-group {
  display: flex;
  gap: 12rpx;
  margin-top: 12rpx;
}

.radio-group.compact {
  gap: 16rpx;
  margin-top: 0;
  flex: 1;
}

.radio-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  border: 2rpx solid #e0e6ed;
  border-radius: 12rpx;
  padding: 14rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.radio-item.compact {
  padding: 6rpx 10rpx;
  font-size: 24rpx;
  height: 36rpx;
}

.radio-item:active {
  transform: scale(0.98);
}

.radio-item.active {
  background: linear-gradient(135deg, #e6f7ff 0%, #f0f5ff 100%);
  border-color: #1890ff;
  color: #1890ff;
}

.radio-circle {
  width: 20rpx;
  height: 20rpx;
  border: 2rpx solid #d9d9d9;
  border-radius: 50%;
  margin-right: 8rpx;
  transition: all 0.3s ease;
}

.radio-item.active .radio-circle {
  background: #1890ff;
  border-color: #1890ff;
  box-shadow: inset 0 0 0 4rpx #fff;
}

/* 选择器样式 */
.picker-input {
  background: #fff;
  border: 2rpx solid #e0e6ed;
  border-radius: 12rpx;
  padding: 16rpx 18rpx;
  font-size: 28rpx;
  color: #333;
  min-height: 48rpx;
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
}

.picker-input.compact {
  padding: 6rpx 0;
  font-size: 26rpx;
  height: 36rpx;
  border-radius: 0;
  width: 100%;
  background: transparent;
  border: none;
  border-bottom: 1rpx solid #d9d9d9;
  display: block;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  box-sizing: border-box;
}

.picker-input:active {
  border-color: #1890ff;
  background: #f8f9fb;
}

.picker-input.compact:active {
  border-bottom-color: #1890ff;
  background: transparent;
}

.picker-input.placeholder {
  color: #bfbfbf;
}

.picker-icon {
  margin-right: 8rpx;
  font-size: 24rpx;
}


/* 省市组合选择器：一行显示两个选择器 */
.picker-group {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
}

/* 覆盖 picker 在组合中的宽度，确保两列同一行显示 */
.picker-group .picker-wrapper {
  width: auto;
  flex: 1;
  min-width: 0; /* 允许在一行内收缩 */
}
.picker-group picker {
  width: auto;
  display: block;
}
.picker-group .picker-input.compact {
  width: 100%;
}


/* Picker包装器 - 占满宽度 */
.picker-wrapper {
  flex: 1;
  display: block;
  width: 100%;
}

/* Picker元素占满宽度 */
picker {
  display: block;
  width: 100%;
}

/* 输入框包装 */
.input-wrapper {
  display: flex;
  align-items: center;
  background: #fff;
  border: 2rpx solid #e0e6ed;
  border-radius: 12rpx;
  padding: 0 16rpx;
  transition: all 0.3s ease;
}

.input-wrapper.compact {
  padding: 6rpx 0;
  border-radius: 0;
  flex: 1;
  background: transparent;
  border: none;
  border-bottom: 1rpx solid #d9d9d9;
  height: 36rpx;
  align-items: center;
}

.input-wrapper:active {
  border-color: #1890ff;
  background: #f8f9fb;
}

.input-wrapper.compact:active {
  border-bottom-color: #1890ff;
  background: transparent;
}

.input-prefix,
.input-suffix {
  font-size: 24rpx;
  color: #999;
  flex-shrink: 0;
}

.input-prefix {
  margin-right: 4rpx;
  font-size: 26rpx;
  color: #666;
}

.input-suffix {
  margin-left: 4rpx;
  font-size: 26rpx;
  color: #666;
}

/* 输入框样式 */
.form-input {
  flex: 1;
  background: transparent;
  border: none;
  padding: 6rpx 0;
  font-size: 26rpx;
  color: #333;
  height: 36rpx;
  line-height: 24rpx;
}

/* 表单分组 */
.form-section {
  background: linear-gradient(135deg, #f8f9fb 0%, #f5f7fa 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 28rpx;
  border: 1rpx solid #e0e6ed;
  transition: all 0.3s ease;
}

.form-section.compact {
  padding: 0;
  margin-bottom: 16rpx;
  background: transparent;
  border: none;
}

.form-section.salaried-section {
  border-left: none;
}

.form-section.self-employed-section {
  border-left: none;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
}

.section-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
}

/* 淡入动画 */
.fade-in {
  animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-8rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 表单操作按钮 */
.form-actions {
  margin-top: 40rpx;
  display: flex;
  gap: 16rpx;
}

.confirm-btn {
  background: linear-gradient(135deg, #1890ff 0%, #0050b3 100%) !important;
  border-radius: 14rpx !important;
  font-weight: 600 !important;
  letter-spacing: 1rpx !important;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.3) !important;
  transition: all 0.3s ease !important;
}

.confirm-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(24, 144, 255, 0.2) !important;
}

.btn-icon {
  margin-right: 6rpx;
  font-weight: 700;
  font-size: 20rpx;
}

.btn-text {
  font-size: 20rpx;
}

/* 上传卡片 */
.upload-card {
  margin: 24rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fb 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(24, 144, 255, 0.1);
}

.upload-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 20rpx;
  background: #f8f9fb;
  border: 2rpx dashed #d9d9d9;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.upload-area.compact {
  margin-left: 0;
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, #f8f9fb 0%, #f5f7fa 100%);
  border: 1rpx solid #e0e6ed;
  border-radius: 12rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  min-height: auto;
}

.upload-area:active {
  background: #f0f2f5;
  border-color: #1890ff;
}

.upload-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  cursor: pointer;
  width: 100%;
  gap: 2rpx;
}

.upload-icon {
  font-size: 28rpx;
  margin: 0;
  line-height: 1;
}

.upload-text {
  font-size: 22rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin: 0;
  text-align: center;
  line-height: 1;
}

.upload-desc {
  font-size: 16rpx;
  color: #999;
  text-align: center;
  line-height: 1;
  margin: 0;
}

/* 已选择文件 */
.selected-file {
  padding: 20rpx;
  background: #f8f9fb;
  border-radius: 12rpx;
}

.selected-file.compact {
  margin-left: 0;
  padding: 12rpx 16rpx;
  background: linear-gradient(135deg, #f8f9fb 0%, #f5f7fa 100%);
  border-radius: 12rpx;
  border: 1rpx solid #e0e6ed;
}

.file-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.file-info.compact {
  gap: 8rpx;
}

.file-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.file-details {
  flex: 1;
}

.file-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 4rpx;
  word-break: break-all;
}

.file-size {
  font-size: 22rpx;
  color: #999;
}

.file-actions {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.remove-btn {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  border: 1rpx solid #e0e6ed;
  border-radius: 8rpx;
  font-size: 24rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.remove-btn:active {
  background: #f5f7fa;
  border-color: #ff4d4f;
  color: #ff4d4f;
}

.remove-btn-icon {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
  border: none;
  border-radius: 0;
  font-size: 28rpx;
  cursor: pointer;
  color: #999;
  font-weight: 300;
  transition: all 0.3s ease;
}

.remove-btn-icon:active {
  color: #ff4d4f;
}

/* 进度条 */
.progress-section {
  margin-top: 24rpx;
  padding: 20rpx;
  background: #f8f9fb;
  border-radius: 12rpx;
}

.progress-section.compact {
  margin-top: 12rpx;
  margin-bottom: 16rpx;
  padding: 8rpx;
  background: transparent;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
  text-align: center;
}

.progress-section.compact .progress-text {
  font-size: 22rpx;
  margin-bottom: 6rpx;
}

.cancel-section {
  margin-top: 16rpx;
}

.cancel-btn {
  background: #fff !important;
  border: 1rpx solid #d9d9d9 !important;
  color: #666 !important;
}

/* 开始分析卡片 */
.analysis-card {
  margin: 24rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fb 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(24, 144, 255, 0.1);
}

/* 验证状态 */
.validation-status {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 28rpx;
  padding: 20rpx;
  background: #f8f9fb;
  border-radius: 12rpx;
}

.validation-status.compact {
  flex-direction: row;
  gap: 20rpx;
  padding: 12rpx;
  background: transparent;
  margin-bottom: 16rpx;
}

.status-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
}

.status-item.compact {
  gap: 8rpx;
  align-items: center;
}

.status-icon {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  font-size: 18rpx;
  font-weight: 700;
  flex-shrink: 0;
  transition: all 0.3s ease;
}

.status-icon.pending {
  background: #f0f2f5;
  color: #bfbfbf;
  border: 2rpx solid #d9d9d9;
}

.status-icon.completed {
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(82, 196, 26, 0.3);
}

.status-text {
  flex: 1;
}

.status-text.compact {
  margin-bottom: 0;
}

.status-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 4rpx;
}

.status-text.compact .status-label {
  font-size: 24rpx;
  margin-bottom: 0;
}

.status-desc {
  font-size: 22rpx;
  color: #999;
  word-break: break-all;
}

/* 分析按钮 */
.analysis-btn {
  background: linear-gradient(135deg, #1890ff 0%, #0050b3 100%) !important;
  border-radius: 14rpx !important;
  font-weight: 600 !important;
  letter-spacing: 1rpx !important;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.3) !important;
  transition: all 0.3s ease !important;
  height: 60rpx !important;
  width: 50% !important;
  margin: 0 auto !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
}

.analysis-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(24, 144, 255, 0.2) !important;
}
