/* jianxin.wxss */
@import "../liushui/liushui.wxss";

/* 认证提示 */
.auth-notice {
  margin: 24rpx;
  background: #fff7ed;
  border: 2rpx solid #fed7aa;
  border-radius: 16rpx;
  padding: 24rpx;
}

/* 会员提示 */
.membership-notice {
  margin: 24rpx;
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border: 2rpx solid #fbbf24;
  border-radius: 16rpx;
  padding: 24rpx;
}

.notice-content {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.notice-icon {
  font-size: 48rpx;
}

.notice-text {
  flex: 1;
}

.notice-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #9a3412;
  margin-bottom: 8rpx;
}

.notice-desc {
  font-size: 24rpx;
  color: #9a3412;
  opacity: 0.8;
}

/* 简信宝功能介绍 */
.feature-intro {
  margin: 24rpx;
  background: linear-gradient(135deg, #1890ff, #40a9ff);
  border-radius: 16rpx;
  padding: 32rpx;
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(24, 144, 255, 0.3);
}

.intro-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.intro-desc {
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 24rpx;
  line-height: 1.5;
}

.intro-features {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.feature-tag {
  background: rgba(255, 255, 255, 0.2);
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

/* 简信宝特有的醒目状态样式 */
.report-item {
  position: relative;
}

/* 失败状态的醒目红色标签 */
.failed-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: linear-gradient(135deg, #ff4d4f, #cf1322);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(255, 77, 79, 0.4);
  z-index: 10;
  animation: pulse 2s infinite;
}

.failed-text {
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

/* 处理中状态的进度标签 */
.processing-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: linear-gradient(135deg, #faad14, #d48806);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(250, 173, 20, 0.4);
  z-index: 10;
}

.processing-text {
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

/* 失败报告的整体样式更醒目 */
.report-item.failed {
  background: linear-gradient(135deg, #fff2f0, #ffebe8);
  border: 2rpx solid #ff4d4f;
  border-radius: 16rpx;
  margin: 8rpx 0;
  box-shadow: 0 4rpx 16rpx rgba(255, 77, 79, 0.15);
  transform: scale(1.02);
}

/* 处理中报告的样式 */
.report-item.processing {
  background: linear-gradient(135deg, #fff7e6, #ffecc7);
  border: 2rpx solid #faad14;
  border-radius: 16rpx;
  margin: 8rpx 0;
  box-shadow: 0 4rpx 16rpx rgba(250, 173, 20, 0.15);
}

/* 脉冲动画 */
@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
  100% {
    transform: scale(1);
  }
}

/* 滑动删除样式 */
.report-item-wrapper {
  position: relative;
  margin-bottom: 16rpx;
  overflow: hidden;
}

.report-item-container {
  position: relative;
  display: flex;
  align-items: stretch;
  transition: transform 0.3s ease;
}

.report-item-container .report-item {
  flex: 1;
  background: white;
  z-index: 2;
}

/* 删除按钮 */
.delete-btn {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  width: 160rpx;
  background: linear-gradient(135deg, #ff4d4f, #cf1322);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  z-index: 1;
  transform: translateX(160rpx);
  transition: transform 0.3s ease;
}

.delete-icon {
  font-size: 48rpx;
}

.delete-text {
  font-size: 24rpx;
  color: white;
  font-weight: 500;
}

/* 滑动效果 */
.report-item-wrapper.swiping .report-item-container {
  transform: translateX(-160rpx);
}

.report-item-wrapper.swiping .delete-btn {
  transform: translateX(0);
}
