/* AI专家分析 */
/* 适合度评级卡片 */
.ai-suitability-card {
  background: linear-gradient(135deg, #4b6cb7 0%, #182848 100%);
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  text-align: center;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(75, 108, 183, 0.2);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.ai-suitability-icon {
  width: 80rpx;
  height: 80rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-bottom: 20rpx;
}

.ai-suitability-label {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
  margin-bottom: 15rpx;
}

.ai-suitability-value {
  font-size: 56rpx;
  font-weight: bold;
  color: white;
  letter-spacing: 2rpx;
}

/* AI子区块 */
.ai-subsection {
  margin-bottom: 30rpx;
}

.ai-subsection-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #e8ecf0;
}

.ai-subsection-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.ai-subsection-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #2c3e50;
}

/* 分析列表 */
.ai-analysis-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.ai-analysis-item {
  display: flex;
  align-items: flex-start;
  gap: 15rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
  border-left: 4rpx solid #4b6cb7;
}

.ai-point-number {
  width: 40rpx;
  height: 40rpx;
  background: linear-gradient(135deg, #4b6cb7 0%, #182848 100%);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  font-weight: bold;
  flex-shrink: 0;
}

.ai-point-content {
  flex: 1;
  font-size: 26rpx;
  line-height: 1.7;
  color: #2c3e50;
}

/* 建议列表 */
.ai-suggestions-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.ai-suggestion-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  padding: 18rpx 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.ai-suggestion-bullet {
  font-size: 32rpx;
  color: #4b6cb7;
  line-height: 1.5;
  flex-shrink: 0;
}

.ai-suggestion-text {
  flex: 1;
  font-size: 26rpx;
  line-height: 1.7;
  color: #2c3e50;
}

/* 风险提示卡片 */
.ai-risk-card {
  background: linear-gradient(135deg, #fff5f0 0%, #ffe8e0 100%);
  border-radius: 12rpx;
  padding: 25rpx;
  border-left: 6rpx solid #ff9800;
}

.ai-risk-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.ai-risk-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.ai-risk-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #d84315;
}

.ai-risk-text {
  font-size: 26rpx;
  line-height: 1.8;
  color: #d84315;
}

